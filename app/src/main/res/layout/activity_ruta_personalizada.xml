<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RutaPersonalizada"
    android:orientation="vertical">


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        android:text="Establecer Latitud y longitud del primer punto"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/lat1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:text="20.141927" />

    <EditText
        android:id="@+id/long1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:text="-101.178378" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:layout_marginHorizontal="5dp"
        android:text="Establecer la latitud y longitud del segundo punto (Punto establecido: casa)"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/lat2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"

        android:text="19.961157" />

    <EditText
        android:id="@+id/long2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:text="-100.935000" />

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Agregar"
        />
</LinearLayout>